<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnUvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тест УФ измерения" />

        <Button
            android:id="@+id/btnUvExec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Запустить измерение" />

        <EditText
            android:id="@+id/editUvRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите диапазон УФ"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSetUvRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Установить диапазон" />
        <Button
            android:id="@+id/graphButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Открыть график" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Очистить лог" />

        <Switch
            android:id="@+id/clearOutSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:checked="true"
            android:text="Авто-очистка" />

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            android:padding="12dp"
            android:text="Лог будет здесь..."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Назад" />
    </LinearLayout>
</ScrollView>
