            </LinearLayout>

            <!-- Ð›Ð¾Ð³ Ð¸ Ð¿ÐµÑ€ÐµÐºÐ»ÑŽÑ‡Ð°Ñ‚ÐµÐ»ÑŒ Ð¾Ñ‡Ð¸ÑÑ‚ÐºÐ¸ -->
            <LinearLayout
                android:id="@+id/logControlContainer"
                android:layout_width="0dp"
