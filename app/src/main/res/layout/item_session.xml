<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox для выбора (виден только в режиме выбора) -->
        <CheckBox
            android:id="@+id/checkboxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <!-- Основное содержимое -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkboxSelect"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <!-- Первая строка: Название и дата -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvSessionName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Название сессии"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvSessionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01.01.2024 12:00"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Вторая строка: Продолжительность и точки -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSessionDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00:15:30"
                    android:textSize="14sp"
                    android:textColor="#2196F3" />

                <TextView
                    android:id="@+id/tvSessionPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 точек"
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Третья строка: Статистика -->
            <TextView
                android:id="@+id/tvSessionStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расстояние: 1250.5 м\nСр. скорость: 3.2 км/ч"
                android:textSize="12sp"
                android:textColor="#666666"
                android:lineSpacingExtra="2dp" />

            <!-- Индикатор статуса (активная/завершенная) -->
            <View
                android:id="@+id/statusIndicator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#4CAF50" />

        </LinearLayout>

        <!-- Простая текстовая стрелка вместо иконки -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="→"
            android:textSize="20sp"
            android:textColor="#999999"
            android:gravity="center"
            android:contentDescription="Выбрать сессию" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>